      <div class="maincard">
        <p class="depcard"><strong><%= flight.departure_date %></strong></p>
        <p class="pricecard"><strong><%= flight.price_per_person %></strong> â‚© </p>
        <p class="tracard"><strong><%= flight.travel_distance %></strong></p>
