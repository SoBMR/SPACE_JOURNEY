<div id="planets-index">

  <div class="container">

    <h1>DESTINATIONS</h1>

    <div class="planetcards">
      <% @planets.each do |planet| %>
        <div class="card">
          <div class="maincard">
            <p class="namecard"><%= planet.name %></p>
            <p class="descripcard"><%= planet.description %></p>
            <%= link_to "Show me dat planet!", planet_path(planet), class: "btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
